<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_score_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.hasan.rpswar.ScorePlay">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/usersChoiceIV"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="You" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/computerScoreTVSP"
        android:layout_alignStart="@+id/computerScoreTVSP"
        android:layout_below="@+id/computersChoiceIV"
        android:text="Computer" />

    <TextView
        android:id="@+id/computerScoreTVSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="27dp"
        android:text="Life:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/yourScoreTVSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/computerScoreTVSP"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="Score: "
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/computersChoiceIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/computerScoreTVSP"
        android:layout_marginTop="86dp"
        app:srcCompat="@drawable/angry_pc" />

    <ImageView
        android:id="@+id/usersChoiceIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/computersChoiceIV"
        app:srcCompat="@drawable/you" />

    <TextView
        android:id="@+id/finalResultSP"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/computersChoiceIV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:gravity="center"
        android:text="@string/paper_wins"
        android:textColor="@color/colorGreen"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rockSP"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/quitButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/rock"
        android:onClick="rockSP" />


    <Button
        android:id="@+id/paperSP"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/rockSP"
        android:layout_centerHorizontal="true"
        android:background="@drawable/paper"
        android:onClick="paperSP" />


    <Button
        android:id="@+id/scissorSP"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/paperSP"
        android:background="@drawable/scissors"
        android:onClick="scissorSP" />



    <Button
        android:id="@+id/quitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="quitSP"
        android:text="@string/quit"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
